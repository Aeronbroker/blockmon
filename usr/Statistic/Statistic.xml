			</params>
		</block>

                <block id="parser" type="tuple_parser" thread_safe_mode="off" >
                    <params>

                    </params>
                </block>

                <block id="statistic" type="statistic_blockCCO" thread_safe_mode="on" >
                    <params>
                    </params>
                </block>

                <block id="hf" type="heavyflows" thread_safe_mode="on">
                    <params>

                    </params>
                </block>

		<connection src_block="sniffer" src_gate="sniffer_out" dst_block="parser" dst_gate="in_pkt"/>
		<connection src_block="parser" src_gate="out_pkt" dst_block="statistic" dst_gate="in_pkt"/>
                <connection src_block="statistic" src_gate="out_pkt" dst_block="hf" dst_gate="in_flows"/>
                
	</install>

</composition>






				
